    <style type="text/css">
      @import url('https://fonts.googleapis.com/css2?family=Poppins&display=swap');
      body {
        font-family: 'Poppins', Arial, Helvetica,sans-serif;
      }
      body main {
        line-height: 26px;
        line-break: 18px;
      }

      #post > p:first-child,
      #post > h1:first-child,
      #post > h2:first-child {
        margin-top: 0; 
      }

      #post p, 
      #post ul,
      #post ol {
        margin-top: 18px;
        margin-bottom: 18px;
      }

      #post h2 {
        font-size: 24px !important;
        line-height: 32px;
        margin-top: 36px;
        font-weight: 600;
      }

      #post h3 {
        font-size: 18px !important;
        line-height: 28px;
        margin-top: 24px;
        font-weight: 600;
      }

      #post > code, #post > p > code {
        background: #272822;
        color: #66d9ef;
        font-size:smaller;
        padding: 4px 6px;
        border-radius: 4px;
        font-weight: italic;
        margin: 0 2px;
        font-style: italic;
      }

      #post blockquote {
        margin-top: 22px;
        border-left: 6px solid #66d9ef;
        padding-left: 18px;
        font-style: italic;
      }

      #post a {
        text-decoration: underline;
      }

      #post ol {
        list-style-type: decimal;
        list-style-position: inside;
        margin-left: 22px;
      }

      #post ul {
        list-style-type: disc;
        list-style-position: inside;
        margin-left: 22px;
      }

      #post table {
        width: 100%;
        border: 1;
      }

      #post table tr td, #post table tr th {
/*        border: 1px solid white;*/
        
      }

      #post table tr th {
        background: lightgray;
        color: black;
        padding: 8px 8px;
        border: 1px solid lightgray;
      }

      #post table tr td {
        border: 1px solid lightgray;
        text-align: center;
        padding: 4px 8px;
      }

    </style>
  </head>
